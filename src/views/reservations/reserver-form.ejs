<% include ../partials/head %>

<% include ../partials/menu %>

<div class="container mt-5 mb-3">

  <div class="row">
    <div class="col-md-4">
      <% include left-menu %>
    </div>

    <div class="col-md-8">

      <% if(locals.vehicule) { %>

      <h2>Reserver une v√©hicules</h2>

      <form>

        <div class="row">
          <div class="col-md-6">
            <!-- Date de depart -->
            <div class="form-group">
              <label for="date-depart">Date de depart</label>
              <input type="date" class="form-control" id="date-depart" name="dateDepart" 
              placeholder="Enter date depart"
                required>
            </div>

          </div>

          <div class="col-md-6">
            <!-- Date de retour -->
            <div class="form-group">
              <label for="date-retour">Date de retour</label>
              <input type="date" class="form-control" id="date-retour" name="dateRetour" 
              placeholder="Enter date retour"
                required>
            </div>
          </div>
        </div>



        <!-- Boss order -->
        <div class="form-group">
          <label for="boss-order">Boss order</label>
          <input type="number" class="form-control" id="boss-order" name="bossOrder" 
          placeholder="Enter boss order"
            required>
        </div>

        <!-- Description de mission -->
        <div class="form-group">
          <label for="desc-mission">Description de mission</label>
          <textarea class="form-control" id="desc-mission" name="descMission" rows="3" required>

          </textarea>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="vehicule">Vehicule</label>
              <input type="text" class="form-control" id="vehicule" value="<%= vehicule.model %>" 
              disabled required>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="num">Num serie</label>
              <input type="text" class="form-control" id="num" value="<%= vehicule.num_serie %>" 
              disabled required>
            </div>
          </div>

        </div>


        <button type="submit" class="btn btn-primary">Enovyer</button>

      </form>
    </div>
    <% } %>

  </div>

</div>

<% include ../partials/footer %>