        </li>
        <% } else { %>
        <li>
          <a href="<%= routesStruct.reservations.listvehicule %>">
            <i class="fas fa-list"></i> Liste de véhicules
          </a>
        </li>
        <li>
          <a href="<%= routesStruct.reservations.listreserved %>">
            <i class="fas fa-list"></i> Liste des reservations
          </a>
        </li>
        <% } } %>
      </ul>
