<% include ../layouts/head %>

<body>

  <div class="wrapper">

    <% include ../layouts/top-menu %>

    <!-- Page Content Holder -->
    <div id="content">

      <% include ../layouts/left-menu %>

      <div class="container">

        <div class="col-md-8">

          <h2><i class="fas fa-plus"></i> Ajout d'une v√©hicule</h2>
          <form action="/vehicules/add" method="POST" onsubmit="return handleFormVehicile(this)">

            <div class="form-group">
              <label for="numSerie">Num serie</label>
              <input type="text" class="form-control" id="numSerie" name="numSerie" placeholder="Enter num serie"
                required>
            </div>

            <div class="form-group">
              <label for="marque">marque</label>
              <input type="text" class="form-control" id="marque" name="marque" placeholder="Entrer marque" required>
            </div>


            <button type="submit" class="btn btn-primary">
              <i class="fas fa-plus"></i> Ajouter
            </button>
            <button type="reset" class="btn btn-danger">
              <i class="fas fa-trash-alt"></i> vider
            </button>

          </form>

          <div class="alert alert-danger mt-3" role="alert" id="alert-form-add-vehicule"></div>

          <% if(locals.msg) { %>
          <div class="alert alert-primary mt-3" role="alert">
            <%= msg %>
          </div>
          <% } %>
        </div>

      </div>

    </div>
    <!--/content-->
  </div>
  <!--/wrapper-->

  <% include ../layouts/footer %>