<% include ../partials/head %>

<% include ../partials/menu %>

<div class="container mt-5 mb-3">

  <div class="row">
    <div class="col-md-4">
      <% include left-menu %>
    </div>

    <div class="col-md-8">

      <h2><i class="fas fa-pencil-ruler"></i> Modification d'une v√©hicule</h2>

      <% if(locals.data) { %>
      <form action="/vehicules/update" method="POST" id="form-update">

        <input type="text" class="form-control" id="id" name="id" 
          value="<%= data.id_vehicule %>" readonly hidden>

        <div class="form-group">
          <label for="numSerie">Num serie</label>
          <input type="text" class="form-control" id="numSerie" name="numSerie" 
          value="<%= data.num_serie %>" required>
        </div>

        <div class="form-group">
          <label for="marque">marque</label>
          <input type="text" class="form-control" id="marque" name="marque" 
          value="<%= data.marque %>" required>
        </div>

        <% if(locals.Etat) { %>
        <div class="form-group">
          <label for="etat ml-3">Etat courante
            <span class="badge badge-dark"><%= data.etat %></span>
          </label>

          <select class="form-control" id="etat" name="etat">
            <% for(let d in Etat) {%>
            <option value="<%= Etat[d] %>"><%= Etat[d] %></option>
            <% } %>
          </select>
        </div>
        <% } %>


        <button type="submit" class="btn btn-success"><i class="fas fa-pencil-ruler"></i> MODIFIER</button>
        <button type="reset" class="btn btn-danger">vider</button>

      </form>
      <% } %>



      <% if(locals.msg) { %>
      <div class="alert alert-primary mt-3" role="alert">
        <%= msg %>
      </div>
      <% } %>
    </div>

  </div>

</div>

<% include ../partials/footer %>