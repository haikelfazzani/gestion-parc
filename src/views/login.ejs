<% include partials/head %>

<div class="container mt-5">

  <div class="form-login mt-5">
    <p class="text-center"><i class="fas fa-users"></i></p>

    <form action="/auth/login" method="POST" onsubmit="return handleFormLogin(this)">
      <div class="form-group">
        <label for="login-email">Email</label>
        <input type="email" class="form-control" id="login-email" name="email" placeholder="Entrer adresse email"
          required>

      </div>
      <div class="form-group">
        <label for="login-password">Mot de passe</label>
        <input type="password" class="form-control" id="login-password" name="password"
          placeholder="Entrer mot de passe" required>
      </div>

      <button type="submit" class="btn btn-primary btn-lg btn-block mt-2">connexion</button>
    </form>

    <% if(locals.msg) { %>
    <div class="alert alert-danger mt-3" role="alert">
      <%= msg %>
    </div>
    <% } %>

  </div>

</div>


<style>
  body {
    background-color: #3c3c3c;
    color: #ffffff;
  }

  img {
    margin: auto;
  }

  form,
  .alert,
  .text-center {
    margin: auto;
    max-width: 400px;
  }

  .form-login {
    background-color: #2d2d2d;
    margin: auto;
    padding: 30px 30px 60px;
    max-width: 500px;
    box-shadow: 0 4px 10px 4px rgba(19, 35, 47, 0.3);
  }

  .form-login p {
    font-size: 150px;
  }
</style>

<script src="/js/login.js"></script>

</body>

</html>