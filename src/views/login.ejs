<% include partials/head %>

<body>

    <div class="text-center mt-5">
        <img src="/img/auth.png" width="200" height="240" alt="">
    </div>

    <form action="/auth/login" method="POST">
        <div class="form-group">
            <label for="login-email">Adresse Email</label>
            <input type="email" class="form-control" 
            id="login-email" name="email" placeholder="Entrer adresse email"
                required>

        </div>
        <div class="form-group">
            <label for="login-password">Mot de passe</label>
            <input type="password" class="form-control" 
            id="login-password" name="password" placeholder="Entrer mot de passe"
                required>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" checked>
            <label class="form-check-label" for="exampleCheck1">souvenir mot de passe</label>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block mt-2">Login</button>
    </form>

    <% if(locals.msg) { %>
    <div class="alert alert-danger mt-2" role="alert">
        <%= msg %>
    </div>
    <% } %>


    <style>
        img {
            margin: auto;
        }

        form , .alert {
            margin: auto;
            max-width: 400px;
        }
    </style>

    <script src="/js/login.js"></script>

</body>

</html>