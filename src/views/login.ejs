<% include partials/head %>
<style>
  body {
    background-color: #3c3c3c;
    color: #ffffff;
  }

  .loginrow {
    box-sizing: border-box;
    display: flex;
    flex: 0 1 auto;
    flex-direction: row;
    flex-wrap: wrap;
    min-height: 100vh;
  }

  .SignInPage,
  .SignInPage>div {
    background-color: rgb(146, 146, 146);
    height: 100%;
    width: 100%;
    min-height: 100vh;
  }

  img {
    margin: auto;
  }

  form,
  .alert,
  .text-center {
    color: #3c3c3c;
    margin: auto;
    max-width: 400px;
  }

  .form-login p {
    color: #3c3c3c;
    font-size: 150px;
  }

  .bg-darkner {
    background-color: #252525 !important;
    color: #fff;
  }

  .vertical-center {
    margin: 0;
    position: absolute;
    top: 50%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }

  .padd-100 {
    padding: 100px;
  }

  @media screen and (max-width: 600px) {
    .bg-darkner {
      display: none;
    }
  }
</style>


<div class="SignInPage loginrow">

  <div class="col-sm-12 col-md-6 bg-darkner">
    <div class="aside vertical-center padd-100">
      <i class="fas fa-car"></i>
      <h1 class="align-items-center">Bienvenue!</h1>
      <p class="align-items-center">
        Espace reservée pour les employé(e)s de Boudjbel Vacpa.Pour
        acceder à votre espace, vous devez se connecter.
      </p>
    </div>
  </div>


  <div class="col-sm-12 col-md-6 bg-light">
    <div class="form-login mt-5">
      <p class="text-center"><i class="fas fa-users"></i></p>

      <form action="/auth/login" method="POST" onsubmit="return handleFormLogin(this)">
        <div class="form-group">
          <label for="login-email">Email</label>
          <input type="email" class="form-control" id="login-email" name="email" placeholder="Entrer adresse email"
            required>

        </div>
        <div class="form-group">
          <label for="login-password">Mot de passe</label>
          <input type="password" class="form-control" id="login-password" name="password"
            placeholder="Entrer mot de passe" required>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block mt-2">connexion</button>
      </form>

      <% if(locals.msg) { %>
      <div class="alert alert-light mt-3" role="alert">
        <%= msg %>
      </div>
      <% } %>

      <div id="demo"></div>

    </div>
  </div>

</div>


<script src="/js/api.js"></script>
<script src="/js/login.js"></script>

</body>

</html>